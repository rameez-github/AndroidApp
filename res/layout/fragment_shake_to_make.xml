<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_left_dark"
    android:orientation="vertical" >
	
    <RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >
        
	    <ImageView android:id="@+id/user_pic"
			android:layout_width="130dp"
			android:layout_height="130dp"
			android:adjustViewBounds="false"
			android:scaleType="fitXY"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
	    	android:layout_alignParentLeft="true"
		    android:src="@drawable/pic8" />
	
	    <Switch
	        android:id="@+id/switch1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/user_pic"
	        android:layout_alignRight="@+id/user_pic" />
    </RelativeLayout>
    
    <RelativeLayout 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp" >
        
	    <ImageView android:id="@+id/img_call"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="false"
		    android:src="@drawable/call" />
	    
	    <TextView android:id="@+id/number"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_toRightOf="@+id/img_call"
			android:layout_toLeftOf="@+id/enable_call"
			android:layout_alignTop="@+id/img_call"
			android:layout_alignBottom="@+id/img_call"
		    android:textColor="@android:color/white"
		    android:textSize="16sp"
		    android:textStyle="bold"
		    android:text="+61-424144751" />
	    
	    <Switch
	        android:id="@+id/enable_call"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" />
    </RelativeLayout>
    
    <RelativeLayout 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp" >
        
	    <ImageView android:id="@+id/img_email"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="false"
		    android:src="@drawable/email" />
	    
	    <TextView android:id="@+id/email"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_toRightOf="@+id/img_email"
			android:layout_toLeftOf="@+id/enable_email"
			android:layout_alignTop="@+id/img_email"
			android:layout_alignBottom="@+id/img_email"
		    android:textColor="@android:color/white"
		    android:textSize="16sp"
		    android:textStyle="bold"
		    android:text="sera@gmail.com" />
	    
	    <Switch
	        android:id="@+id/enable_email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" />
    </RelativeLayout>
    
    <RelativeLayout 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp" >
        
	    <ImageView android:id="@+id/img_contact"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="false"
		    android:src="@drawable/contact" />
	    
	    <TextView android:id="@+id/contact"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_toRightOf="@+id/img_contact"
			android:layout_toLeftOf="@+id/enable_contact"
			android:layout_alignTop="@+id/img_contact"
			android:layout_alignBottom="@+id/img_contact"
		    android:textColor="@android:color/white"
		    android:textSize="16sp"
		    android:textStyle="bold"
		    android:text="sarahkhl" />
	    
	    <Switch
	        android:id="@+id/enable_contact"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/barDarkColor"
        android:textSize="14sp"
        android:text="Shake your phone, Press and hold button" />

</LinearLayout>
